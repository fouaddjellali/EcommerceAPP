{% extends 'base.html.twig' %}
{% block title %}Liste des Commentaires{% endblock %}

{% block body %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Liste des Commentaires</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="{{ path('app_comment_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Ajouter un nouveau commentaire
                </a>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title"><i class="fas fa-comments"></i> Commentaires</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 50%;">Contenu</th>
                            <th style="width: 25%;">Date de création</th>
                            <th style="width: 20%;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td class="align-middle">{{ comment.id }}</td>
                            <td class="align-middle">{{ comment.content }}</td>
                            <td class="align-middle">
                                {{ comment.createdAt ? comment.createdAt|date('d-m-Y H:i:s') : 'Non spécifiée' }}
                            </td>
                            <td class="align-middle text-center">
                                <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="alert alert-info m-0">
                                    <i class="fas fa-info-circle"></i> Aucun commentaire trouvé.
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
