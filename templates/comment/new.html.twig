
{% extends 'base.html.twig' %}

{% block title %}Nouveau Commentaire{% endblock %}

{% block body %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Créer un Nouveau Commentaire</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="{{ path('app_comment_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title"><i class="fas fa-comment"></i> Formulaire de Création</h3>
            </div>
            <div class="card-body">
                {{ include('comment/_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
