
{% extends 'base.html.twig' %}

{% block title %}Détails du Commentaire{% endblock %}

{% block body %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Détails du Commentaire</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="{{ path('app_comment_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('comment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title"><i class="fas fa-comment"></i> Informations du Commentaire</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 30%;">ID</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Contenu</th>
                            <td>{{ comment.content }}</td>
                        </tr>
                        <tr>
                            <th>Date de Création</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('d-m-Y H:i:s') : '<span class="text-danger">Non spécifiée</span>'|raw }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-right">
                <a href="{{ path('app_comment_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('comment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
