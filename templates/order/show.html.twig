{% extends 'base.html.twig' %}

{% block title %}Détails de la Commande{% endblock %}

{% block body %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Détails de la Commande</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('order/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title"><i class="fas fa-info-circle"></i> Informations sur la Commande</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 30%;">ID</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Date de Commande</th>
                            <td>{{ order.orderDate ? order.orderDate|date('d-m-Y H:i:s') : '<span class="text-danger">Non spécifiée</span>'|raw }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-right">
                <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                {{ include('order/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
